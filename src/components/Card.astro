---
import { Image } from "astro:assets";
interface CardProps {
	image?: string;
	title?: string;
	subtitle?: string;
	description?: string;
}

const { image, title, subtitle, description } = Astro.props;
---

<div
	class="group relative block bg-[--blue] max-w-[350px] hover:cursor-crosshair">
	<Image
		alt={title}
		src={image}
		class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"
	/>

	<div class="relative p-4 sm:p-6 lg:p-8">
		<h2 class="text-sm font-medium tracking-widest text-[--yellow]">
			{subtitle}
		</h2>

		<h1 class="text-xl font-bold text-white sm:text-2xl">{title}</h1>

		<div class="mt-32 sm:mt-48 lg:mt-64">
			<div
				class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100">
				<p class="text-sm text-white">
					{description}
				</p>
			</div>
		</div>
	</div>
</div>
