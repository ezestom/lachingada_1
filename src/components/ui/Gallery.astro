---
import Layout from "../../layouts/Layout.astro";
import { EmblaCarousel } from "../EmblaCarousel/EmblaCarousel.jsx";
import Container from "./Container.astro";
import compareArrow from "../../icons/compareArrow.svg";
---

<Layout title="">
	<section
		class="w-full h-full bg-red-100 z-10 sticky top-0 flex items-center justify-center flex-col min-h-screen"
		id="gallery">
		<Container>
			<article
				class="flex flex-col mt-16 md:mt-0 md:flex-row md:justify-between justify-center gap-10 w-full relative">
				<div class="w-full">
					<EmblaCarousel client:visible />
				</div>
			</article>
		</Container>
		<img
			src={compareArrow.src}
			alt=""
			class="absolute bottom-20 sm:bottom-12 m-auto right-0 left-0 z-50 drop-shadow-sm -rotate-12 opacity-50"
		/>
	</section>
</Layout>
