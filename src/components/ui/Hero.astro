---
import { Header } from "./Header.jsx";
import MySwal from "../MySwal/MySwal.jsx";
import BackButton from "../BackButton.astro";
---

<section class="h-[100vh] max-w-[100vw]">
	<Header client:load />
	<MySwal client:visible />
	<div class="parent pt-16 top-0 -z-10 max-w-[100dvw] overflow-hidden">
		<div class="div1"></div>
		<div class="div2"></div>
		<div class="div3"></div>
		<div class="div4"></div>
		<div class="div5"></div>
		<div class="div6"></div>
	</div>
	<!-- <div class="bg-yellow-300 w-12 h-9 z-100 fixed m-auto"></div> -->
	<BackButton />
</section>

<style>
	.parent div {
		position: relative;
		overflow: hidden;
		background-repeat: no-repeat;
		background-position: center;
	}

	.parent div::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(
			circle,
			transparent 0%,
			rgba(0, 0, 0, 0.35) 100%
		);
		/* difumina los bordes de cada div */

		pointer-events: none; /* Permite que los eventos de puntero pasen a la imagen de fondo */
	}

	section {
		overflow: hidden; /* Evita que se vean scrollbars si las imágenes se salen del contenedor */
	}
	.parent {
		display: grid;
		grid-template-columns: repeat(8, 1fr);
		grid-template-rows: repeat(6, 1fr);
		height: 100%;
		width: 100%;
	}

	.parent div {
		overflow: hidden;
		background-repeat: no-repeat;
		background-position: center;
	}

	.div1 {
		grid-area: 1 / 1 / 3 / 4;
		background-image: url("../../img/logorosa.png");
		background-size: contain; /* Aquí usamos contain para mostrar el logo entero */
	}
	.div2 {
		grid-area: 1 / 4 / 4 / 7;
		background-image: url("../../img/0060.jpg");
		background-size: cover; /* Si la imagen se corta, considera cambiar a 'contain' */
	}
	.div3 {
		grid-area: 1 / 7 / 4 / 9;
		background-image: url("../../img/0189.jpg");
		background-size: cover;
	}
	.div4 {
		grid-area: 3 / 1 / 7 / 4;
		background-image: url("../../img/0066.jpg");
		background-size: cover;
	}
	.div5 {
		grid-area: 4 / 4 / 7 / 6;
		background-image: url("../../img/0076.jpg");
		background-size: cover;
	}
	.div6 {
		grid-area: 4 / 6 / 7 / 9;
		background-image: url("../../img/DSC1549.jpeg");
		background-size: cover;
	}
</style>
